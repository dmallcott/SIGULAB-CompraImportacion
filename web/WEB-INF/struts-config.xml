<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
    <!-- En los form beans deben colocar las clases que utilizaran dentro de 
         los actions, sino struts les dira que no consigue el form bean a cual
         asociarse para determinado action-->
        <form-bean name="Proveedor" type="Clases.Proveedor"/>
        <form-bean name="Compra" type="Clases.Compra"/>
    </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>

    <global-forwards>
    </global-forwards>

    <action-mappings>
            
        <!-- PROVEEDOR -->    
           
        <!-- Consultar Proveedores -->
        <action input="/*" 
                path="/consultarProveedores" 
                type="Actions.Proveedor.ConsultarProveedores" 
                scope="request"
                name="Proveedor"
                validate="false">
            <!--Si el forward es Success, va a prepa2.jsp-->
            <forward name="success" path="consultarProveedores"/>
            <!--Si no es Success, es decir, es Failure, va a welcomeStruts.jsp-->
            <forward name="failure" path="/welcomeStruts.jsp"/>
        </action>
        
        <!-- Agregar Proveedor -->
        <action input="/*"
                path="/reqAgregarProveedor"
                type="Actions.Proveedor.ReqAgregarProveedor"
                scope="request"
                validat="false">
            <forward name="success" path="agregarProveedor"/>
        </action>
        
        <action input="/reqAgregarProveedor"
                path="/agregarProveedor"
                type="Actions.Proveedor.AgregarProveedor"
                scope="request"
                name="Proveedor"
                validate="false">
            <forward name="success" path="consultarProveedores"/>
            <forward name="failure" path="/welcomeStruts.jsp"/>
            <forward name="yaregistrada" path="/welcomeStruts.jsp"/>
        </action>
        
        <!-- Eliminar Proveedor -->
        <action input="/consultarProveedores"
                path="/eliminarProveedor"
                type="Actions.Proveedor.EliminarProveedor"
                scope="request"
                name="Proveedor"
                validate="false">
            <forward name="success" path="consultarProveedores"/>
            <forward name="failure" path="consultarProveedores"/>
        </action>
        
        <!-- Editar Resena -->
            <action input="/consultarProveedores"
                path="/petEditarResena"
                type="Actions.Proveedor.ReqEditarResena"
                scope="request"
                name="Proveedor"
                validate="false">
                <forward name="success" path="editarResena"/>
            </action>
            
            <action input="/petEditarResena"
                    path="/editarResena"
                    type="Actions.Proveedor.EditarResena"
                    scope="request"
                    name="Proveedor"
                    validate="false">
                <forward name="success" path="consultarProveedores"/>
                <forward name="failure" path="editarResena"/>
            </action>
       
        <!-- COMPRAS -->
        
        <action input="/*" 
                path="/consultarCompras" 
                type="Actions.Compra.ConsultarCompras" 
                scope="request"
                name="Compra"
                validate="false">
            <!--Si el forward es Success, va a prepa2.jsp-->
            <forward name="success" path="consultarCompras"/>
            <forward name="failure" path="/welcomeStruts.jsp"/>
        </action>
        
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>    
    
    <!-- ========================= Tiles plugin ===============================-->
    <!--
    This plugin initialize Tiles definition factory. This later can takes some
    parameters explained here after. The plugin first read parameters from
    web.xml, thenoverload them with parameters defined here. All parameters
    are optional.
    The plugin should be declared in each struts-config file.
    - definitions-config: (optional)
    Specify configuration file names. There can be several comma
    separated file names (default: ?? )
    - moduleAware: (optional - struts1.1)
    Specify if the Tiles definition factory is module aware. If true
    (default), there will be one factory for each Struts module.
    If false, there will be one common factory for all module. In this
    later case, it is still needed to declare one plugin per module.
    The factory will be initialized with parameters found in the first
    initialized plugin (generally the one associated with the default
    module).
    true : One factory per module. (default)
    false : one single shared factory for all modules
    - definitions-parser-validate: (optional)
    Specify if xml parser should validate the Tiles configuration file.
    true : validate. DTD should be specified in file header (default)
    false : no validation

    Paths found in Tiles definitions are relative to the main context.
    -->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
